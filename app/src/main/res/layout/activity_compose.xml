<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/gratsEditTextComposeActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите поздравление"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/removeButtonComposeActivity"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/buttonwhite"
        android:text="Удалить"
        android:layout_marginEnd="26dp"
        android:layout_alignBaseline="@+id/addButtonComposeActivity"
        android:layout_alignBottom="@+id/addButtonComposeActivity"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/addButtonComposeActivity"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Добавить"
        style="@style/buttonblue"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/gratsEditTextComposeActivity"
         />

    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/buttonwhite"
        android:visibility="visible"
        android:text="Отмена"
        android:layout_alignBaseline="@+id/addButtonComposeActivity"
        android:layout_alignBottom="@+id/addButtonComposeActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />

</RelativeLayout>